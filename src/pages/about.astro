---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Sobre mi";

const identity = {
  firstName: "Armando ",
  lastName: "Alpuche",
  country: "Mexico",
  occupation: "Estudiante",
  hobbies: ["Programar", "Jugar Videojuegos", "Dormir", "Escuchar Música"],
};
const skills = ["HTML", "CSS", "JavaScript", "Vue", "Astro", "Tailwind"];

const happy = true;
const finished = false;
const goal = 3;
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class="text-5xl text-purple-900 font- mt-4 mb-2">{pageTitle}</h1>
  <p>Acá algunos datos acerca de mí:</p>
  <ul>
    <li>Me llamo: {identity.firstName} {identity.lastName}</li>
    <li>
      Soy de: {identity.country} y actualmente soy: {identity.occupation}
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Dos de mis aficiones son: {identity.hobbies[0]} y{" "}
          {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>Mis habiliadades tecnicas son:</p>
  <ul>
    {skills.map((skill) => <li>{skill}</li>)}
  </ul>

  {happy && <p>Estoy feliz</p>}
  {finished && <p>¡He terminado el tutorial!</p>}
  {
    goal === 3 ? (
      <p>Mi objetivo es acabar en 3 dias</p>
    ) : (
      <p>Mi objetivo no son 3 dias</p>
    )
  }
</BaseLayout>
